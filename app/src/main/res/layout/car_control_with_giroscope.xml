<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bgcarimage"
    android:scaleType = "centerCrop"
    tools:context="com.mariusiliescu.carcontrol.CarControlWithGiroscope">


    <ToggleButton
        style="@style/toggleButton"
        android:background="@drawable/ic_toggle_animation"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/btnAvarii"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:layout_alignTop="@+id/right"
        android:layout_centerHorizontal="true" />


    <ToggleButton
        style="@style/toggleButton"
        android:background="@drawable/semnalizare_animatie_stanga"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/btnSemnStanga"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:layout_below="@+id/up"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left" />


    <ToggleButton
        style="@style/toggleButton"
        android:background="@drawable/semnalizare_animatie_dreapta"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/btnSemnDreapta"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:layout_below="@+id/up"
        android:layout_toLeftOf="@+id/right"
        android:layout_toStartOf="@+id/right" />


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/up"
        android:src="@drawable/up"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/down"
        android:src="@drawable/down"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/up"
        android:layout_alignStart="@+id/up" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/left"
        android:src="@drawable/left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/right"
        android:src="@drawable/right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/btnSettings2"
        android:background="@null"
        android:src="@drawable/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp" />

</RelativeLayout>
